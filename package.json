{
  "name": "runes-lightning-dev",
  "version": "0.1.0",
  "description": "Development sandbox for Rune asset integration on the Bitcoin Lightning Network",
  "main": "index.js",
  "scripts": {
    "start": "node tools/server.js",
    "dev": "nodemon tools/server.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "webpack --mode production",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "bitcoin",
    "lightning",
    "runes",
    "ordinals",
    "blockchain",
    "development",
    "sandbox"
  ],
  "author": "Runes over Lightning Initiative (ROL)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Runes-over-Lightning-Initiative-ROL/runes-lightning-dev.git"
  },
  "bugs": {
    "url": "https://github.com/Runes-over-Lightning-Initiative-ROL/runes-lightning-dev/issues"
  },
  "homepage": "https://github.com/Runes-over-Lightning-Initiative-ROL/runes-lightning-dev#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "node-bitcoin": "^1.4.4",
    "lightning-client": "^0.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
